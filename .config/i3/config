# Start ncmpcpp, controlling remote mpd
bindsym $mod+shift+n exec i3-sensible-terminal -e "ncmpcpp --host=165.227.148.86 --port=6600"

# Start mpd, listening to remote streaming server
bindsym $mod+shift+p exec "mpc clear && mpc add http://165.227.148.86:8000 && mpc play"

# Stop mpd
bindsym $mod+shift+s exec "mpc stop"

